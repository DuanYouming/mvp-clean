<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="122dp"
    android:background="@drawable/bg_item_background">

    <com.foxconn.bandon.custom.StatusSwitch
        android:id="@+id/is_alarm_enable"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:layout_centerVertical="true"
        android:src="@drawable/btn_alarm_delete"
        android:visibility="gone"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="40sp"
        android:textColor="#4A4A4A"
        android:layout_marginStart="33dp"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/alarm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/alarm_time"
        android:layout_below="@id/alarm_time"
        android:textSize="16sp"
        android:textColor="#9B9B9B"/>

</RelativeLayout>