<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F4F4F4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="30dp"
            android:text="留言板"
            android:textColor="#414042"
            android:textSize="36sp" />

        <ImageView
            android:layout_width="924dp"
            android:layout_height="3dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="104dp"
            android:background="@drawable/memo_dash_line"
            android:layerType="software"
            tools:ignore="ContentDescription" />

        <FrameLayout
            android:id="@+id/message_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/btn_recycle"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="28dp"
            android:layout_marginEnd="34dp"
            android:src="@drawable/ic_memo_trashcan"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />


        <ImageView
            android:id="@+id/btn_add_message"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="49dp"
            android:layout_marginEnd="51dp"
            android:background="@drawable/btn_add_memo"
            tools:ignore="ContentDescription" />

    </FrameLayout>


</android.support.v7.widget.CardView>
